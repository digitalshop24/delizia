<div class="item col-md-4 col-sm-6 col-xs-12">
  <div class="record" data-id="<%= tile.id %>">
    <div class="row">
      <div class="pic col-sm-5 col-xs-3">
        <div>
          <a href="<%= asset_path(tile.image.url) %>" class="fancybox"><%= image_tag(tile.image.url(:medium), :class => "img-responsive center-block") if tile.image_file_name %></a>
        </div>
      </div>
      <div class="description col-sm-7 col-xs-8">
        <h4> <%=tile.name%></h4>
        <p>Размер:</p>
        <p class="value"><%=tile.width%>x<%=tile.length%></p>
        <p>Поверхность: </p>
        <p class="value"><%=tile.surface.name if tile.surface%></p>
        <p>Цена: </p>
        <% if tile.price.to_i!=0 %>
          <p class="value"><b><%=number_with_delimiter(tile.price.to_i*(@course.to_i), delimiter: " ")%> м2</b></p>
        <% end %>
        <% if tile.single_price.to_i!=0 %>
          <p class="value"><b><%=number_with_delimiter(tile.single_price.to_i*(@course.to_i), delimiter: " ")%> шт</b></p>
        <% end %>
        <% if tile.compose_price.to_i!=0 %>
          <p class="value"><b><%=number_with_delimiter(tile.compose_price.to_i*(@course.to_i), delimiter: " ")%> коллекция</b></p>
        <% end %>
      </div>
    </div>
  </div>
</div>